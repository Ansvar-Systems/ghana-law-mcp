{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Ghana Law MCP",
  "description": "Golden contract tests for the Ghana Law MCP covering data protection, cybersecurity, electronic transactions, companies, and communications legislation",
  "tests": [
    {
      "id": "gh-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the Data Protection Act 2012 (Act 843) — establishment of Data Protection Commission",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Data Protection Act 2012",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["Data Protection Commission"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "gh-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the Cybersecurity Act 2020 (Act 1038) — establishment of Cyber Security Authority",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Cybersecurity Act 2020",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["Cyber Security Authority"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "gh-003",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the Companies Act 2019 (Act 992) — incorporation of companies",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Companies Act 2019",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["compan", "incorporat", "Companies Act"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "gh-004",
      "category": "search",
      "description": "Full-text search for 'personal data' returns Data Protection Act 2012 provisions",
      "tool": "search_legislation",
      "input": {
        "query": "personal data"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Data Protection Act", "personal data", "data subject", "Act 843"]
      }
    },
    {
      "id": "gh-005",
      "category": "search",
      "description": "Full-text search for 'cybersecurity' returns Cybersecurity Act 2020 provisions",
      "tool": "search_legislation",
      "input": {
        "query": "cybersecurity"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Cybersecurity Act", "Cyber Security Authority", "cybersecurity", "Act 1038"]
      }
    },
    {
      "id": "gh-006",
      "category": "search",
      "description": "Full-text search for 'electronic transaction' returns Electronic Transactions Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "electronic transaction"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Electronic Transactions Act", "electronic", "transaction", "Act 772"]
      }
    },
    {
      "id": "gh-007",
      "category": "citation_roundtrip",
      "description": "Citation for Data Protection Act 2012 Section 17 (data protection principles) includes ghalii.org or official URL",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Data Protection Act 2012",
        "article": "17"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "gh-008",
      "category": "citation_roundtrip",
      "description": "Citation for Cybersecurity Act 2020 Section 1 includes official identifier (Act 1038)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Cybersecurity Act 2020",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "gh-009",
      "category": "eu_cross_reference",
      "description": "Data Protection Act 2012 cross-reference to GDPR — Ghana's DPA predates GDPR but shares many principles",
      "tool": "get_provision_eu_basis",
      "input": {
        "law_identifier": "Data Protection Act 2012"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["GDPR", "General Data Protection Regulation", "2016/679", "data protection", "EU Directive 95/46"]
      }
    },
    {
      "id": "gh-010",
      "category": "eu_cross_reference",
      "description": "Cybersecurity Act 2020 cross-reference to AU Convention on Cyber Security (Malabo Convention)",
      "tool": "get_provision_eu_basis",
      "input": {
        "law_identifier": "Cybersecurity Act 2020"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Malabo Convention", "African Union", "AU Convention", "Cyber Security", "Budapest Convention"]
      }
    },
    {
      "id": "gh-011",
      "category": "negative_test",
      "description": "Non-existent Ghanaian Act returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Fictional Cocoa Digital Act 2099",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gh-012",
      "category": "negative_test",
      "description": "Malformed section number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Data Protection Act 2012",
        "article": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
